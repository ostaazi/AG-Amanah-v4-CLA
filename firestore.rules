rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(parentId) {
      return isAuthenticated() && request.auth.uid == parentId;
    }

    function requestParentMatchesAuth() {
      return isAuthenticated()
        && request.resource.data.parentId is string
        && request.resource.data.parentId == request.auth.uid;
    }

    function resourceParentMatchesAuth() {
      return isAuthenticated()
        && resource.data.parentId is string
        && resource.data.parentId == request.auth.uid;
    }

    function canAccessChild(childId) {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/children/$(childId))
        && (
          get(/databases/$(database)/documents/children/$(childId)).data.parentId == request.auth.uid
          || get(/databases/$(database)/documents/children/$(childId)).data.get('deviceOwnerUid', null) == request.auth.uid
        );
    }

    function childParentId(childId) {
      return get(/databases/$(database)/documents/children/$(childId)).data.parentId;
    }

    function requestAlertHasOwnedChild() {
      return request.resource.data.childId is string
        && canAccessChild(request.resource.data.childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(request.resource.data.childId);
    }

    function resourceAlertHasOwnedChild() {
      return resource.data.childId is string
        && canAccessChild(resource.data.childId)
        && resource.data.parentId is string
        && resource.data.parentId == childParentId(resource.data.childId);
    }

    function canCreateRootAlert() {
      return isAuthenticated()
        && request.resource.data.parentId is string
        && (
          request.resource.data.parentId == request.auth.uid
          || requestAlertHasOwnedChild()
        );
    }

    function canPatchAlertUploadStateFromChild() {
      return isAuthenticated()
        && resourceAlertHasOwnedChild()
        && request.resource.data.parentId == resource.data.parentId
        && request.resource.data.childId == resource.data.childId
        && request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'evidenceUploadStatus',
          'evidenceUploadAttempt',
          'evidenceUploadRetryCount',
          'evidenceUploadLastError',
          'evidenceUploadSource',
          'evidenceUploadLastAttemptAt',
          'evidenceUploadAckAt'
        ]);
    }

    match /parents/{parentId} {
      allow read, write: if isOwner(parentId);

      match /pairingRequests/{requestId} {
        allow create: if isAuthenticated()
          && request.resource.data.parentId == parentId
          && request.resource.data.status == 'PENDING';

        allow read, update, delete: if isOwner(parentId);
      }
    }

    match /children/{childId} {
      allow read: if isAuthenticated() && (
        resource.data.parentId == request.auth.uid
        || resource.data.get('deviceOwnerUid', null) == request.auth.uid
      );

      allow create: if requestParentMatchesAuth();

      allow update: if isAuthenticated() && (
        resource.data.parentId == request.auth.uid
        || resource.data.get('deviceOwnerUid', null) == request.auth.uid
        || (
          resource.data.get('deviceOwnerUid', null) == null
          && request.resource.data.deviceOwnerUid == request.auth.uid
          && request.resource.data.parentId == resource.data.parentId
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['deviceOwnerUid'])
        )
      );

      allow delete: if isAuthenticated() && (
        resource.data.parentId == request.auth.uid
        || resource.data.get('deviceOwnerUid', null) == request.auth.uid
      );

      match /alerts/{alertId} {
        allow create, read, update, delete: if canAccessChild(childId);
      }
    }

    match /supervisors/{supervisorId} {
      allow read: if resourceParentMatchesAuth();
      allow create: if requestParentMatchesAuth();
      allow update, delete: if resourceParentMatchesAuth();
    }

    match /alerts/{alertId} {
      allow create: if canCreateRootAlert();
      allow read, delete: if resourceParentMatchesAuth();
      allow update: if resourceParentMatchesAuth() || canPatchAlertUploadStateFromChild();
    }

    match /activities/{activityId} {
      allow create: if isAuthenticated() && request.resource.data.parentId is string;
      allow read: if resourceParentMatchesAuth();
      allow delete: if resourceParentMatchesAuth()
        && resource.data.mockTag == 'AMANAH_FAKE_DATA';
    }

    match /playbooks/{parentId} {
      allow read, write: if isOwner(parentId);
    }

    match /custody/{custodyId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /auditLogs/{auditId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /auditTrail/{auditId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /deviceHealth/{childId} {
      allow read: if canAccessChild(childId);
      allow create, update: if isAuthenticated()
        && request.resource.data.childId is string
        && request.resource.data.childId == childId
        && canAccessChild(childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(childId);
      allow delete: if isAuthenticated()
        && childParentId(childId) == request.auth.uid;
    }

    match /deviceHealth/{childId}/history/{historyId} {
      allow read: if canAccessChild(childId);
      allow create: if isAuthenticated()
        && canAccessChild(childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(childId);
      allow update, delete: if isAuthenticated()
        && childParentId(childId) == request.auth.uid;
    }

    match /vulnerabilityFindings/{childId} {
      allow read: if canAccessChild(childId);
      allow create, update: if isAuthenticated()
        && request.resource.data.childId is string
        && request.resource.data.childId == childId
        && canAccessChild(childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(childId);
      allow delete: if isAuthenticated()
        && childParentId(childId) == request.auth.uid;
    }

    match /vulnerabilityFindings/{childId}/history/{scanId} {
      allow read: if canAccessChild(childId);
      allow create: if isAuthenticated()
        && canAccessChild(childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(childId);
      allow update, delete: if isAuthenticated()
        && childParentId(childId) == request.auth.uid;
    }

    match /parentVulnerabilityFindings/{parentId} {
      allow read, write: if isOwner(parentId);
    }

    match /parentVulnerabilityFindings/{parentId}/history/{eventId} {
      allow read: if isOwner(parentId);
      allow create: if isOwner(parentId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == parentId;
      allow update, delete: if isOwner(parentId);
    }

    match /appUsage/{usageId} {
      allow read: if resourceParentMatchesAuth();
      allow create, update: if isAuthenticated()
        && request.resource.data.childId is string
        && canAccessChild(request.resource.data.childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(request.resource.data.childId);
      allow delete: if resourceParentMatchesAuth();
    }

    match /tamperAlerts/{alertId} {
      allow create: if isAuthenticated()
        && request.resource.data.childId is string
        && canAccessChild(request.resource.data.childId)
        && request.resource.data.parentId is string
        && request.resource.data.parentId == childParentId(request.resource.data.childId);
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /healthAlerts/{alertId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /consents/{consentId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /systemPatches/{patchId} {
      allow create: if requestParentMatchesAuth();
      allow read, update, delete: if resourceParentMatchesAuth();
    }

    match /system_configs/{parentId} {
      allow read, write: if isOwner(parentId);
    }

    match /twoFactorSecrets/{parentId} {
      allow read, write: if isOwner(parentId);
    }

    match /pairingKeys/{key} {
      // Phase 1 Security: Require authentication for pairing key lookup
      allow get: if isAuthenticated();
      allow list: if false;
      allow create: if requestParentMatchesAuth();
      allow update, delete: if resourceParentMatchesAuth();
    }

    match /parentMessages/{messageId} {
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid
        || resource.data.childId == request.auth.uid
      );
      allow delete: if isAuthenticated() && resource.data.senderId == request.auth.uid;
    }
  }
}
